<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CamScanner" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- <item name="android:statusBarColor">?attr/colorPrimaryVariant</item> -->c
    </style>
    <style name="ButtonStyle">
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>
    <style name="SettingSectionLabel">
        <item name="android:paddingTop">@dimen/section_margin</item>
        <item name="android:paddingBottom">@dimen/normal_margin</item>
        <item name="android:paddingStart">@dimen/bigger_margin</item>
        <item name="android:paddingEnd">@dimen/bigger_margin</item>
        <item name="android:textSize">@dimen/bigger_text_size</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    <style name="SettingItemHolder">
        <item name="android:paddingTop">@dimen/smaller_margin</item>
        <item name="android:paddingBottom">@dimen/smaller_margin</item>
        <item name="android:paddingStart">@dimen/bigger_margin</item>
        <item name="android:paddingEnd">@dimen/bigger_margin</item>
    </style>
    <style name="SettingItemLabel">
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>
    <style name="SettingItemValue">
        <item name="android:alpha">0.6</item>
        <item name="android:textFontWeight">300</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>
</resources>
